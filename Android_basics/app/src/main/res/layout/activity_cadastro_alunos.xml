<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_formulario_aluno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.ActivityCadastroAlunos">

    <EditText
        android:id="@+id/formulario_aluno_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:inputType="textCapWords"
        android:hint="@string/formulario_aluno_nome"
        android:autofillHints="name" />

    <EditText
        android:id="@+id/formulario_aluno_sobrenome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:inputType="textCapWords"
        android:hint="@string/formulario_aluno_sobrenome"
        android:autofillHints="name" />

    <EditText
        android:id="@+id/et_formulario_aluno_telefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="@string/formulario_aluno_telefone"
        android:autofillHints="phone" />

    <EditText
        android:id="@+id/et_formulario_aluno_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="@string/formulario_aluno_email"
        android:autofillHints="emailAddress" />

</LinearLayout>